#!/bin/bash

source ./bin/variables

if [ ${ENV} != "./.env" ]
  then
    printf "${GREEN}
        \t\t\t
        +---------------------+
        | Installing depends  |
        +---------------------+
        \t\t\t
    "${NC}
    sleep 3
    composer install && npm install
    printf "${GREEN}
        \t\t\t
        +------------------------------+
        | creating ENV configuration   |
        +------------------------------+
        \t\t\t
    "${NC}
    cp ./.env.example ./.env
    sleep 3;
    printf "${GREEN}
        \t\t\t
        +--------------------------+
        | Confiration successfuly  |
        +--------------------------+
        \t\t\t
    "${NC}
    printf "${RED}
        \t\t\t
        +---------------------------------------------------+
        | Please enter your data in .env files by yourself  |
        +---------------------------------------------------+
        \t\t\t
        "${NC}
    sleep 3
    printf "${GREEN}
        \t\t\t
        +----------------------+
        | generate laravel key |
        +----------------------+
        \t\t\t
        "${NC}
    sleep 3
    php artisan key:generate
else
    printf "${RED}
        \t\t\t
        +---------------------------------------------------+
        | Please enter your data in .env files by yourself  |
        +---------------------------------------------------+
        \t\t\t
        "${NC}
fi
